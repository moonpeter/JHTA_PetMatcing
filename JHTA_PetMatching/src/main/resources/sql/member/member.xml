<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Members">
	<select id="idcheck" resultType="member" parameterType="String">
		Select *
		from members
		where id = #{id}
	</select>
	
	<insert id="insert" parameterType="member">
		Insert into members
		values(#{id}, #{password}, #{name}, #{phone}, #{gender}, #{position}, #{auth})
	</insert>
	
	<delete id="delete" parameterType="member">
		Delete From members
		Where id = #{id}
	</delete>
	
	<update id="update" parameterType="member">
		Update members
		Set id = #{id},
		password = #{password},
		name = #{name},
		phone = #{phone},
		gender = #{gender},
		position = #{position},
		auth = #{auth}
		Where id = #{id}
	</update>
	
	<insert id="insert2" parameterType="destination">
		Insert into destination
		values(#{id}, #{name}, #{post}, #{address}, #{phone}, #{request})
	</insert>
	
	<select id="desticheck" resultType="destination" parameterType="String">
		Select *
		from destination
		where id = #{id}
	</select>
	
	<update id="destiupdate" parameterType="destination">
		Update destination
		Set id = #{id},
		name = #{name},
		post = #{post},
		address = #{address},
		phone = #{phone},
		request = #{request}
		where id = #{id}
	</update>
	
	<delete id="destidelete" parameterType="destination">
		Delete From destination
		Where id = #{id}
	</delete>
</mapper>