<?xml version="1.0" encoding="UTF-8" ?><!-- SQL 맵퍼 파일은 xml이기 때문에 제일 먼저 xml 선언이 옵니다. -->
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Members">

	<select id="idcheck" resultType="member" parameterType="String">
		select * from member2 where id = #{id} <!-- 만족하는 row 없으면 null 값을 가지고 온다. -->
	</select>


	<select id="insert" parameterType="member">
		insert into member2
		values (#{id}, #{password}, #{name}, #{age}, #{gender}, #{email})
	</select>

	<delete id="delete" parameterType="String">
		delete from member2 where id = #{id}
	</delete>
	
	<update id="update" parameterType="member">
		update member2
		set name = #{name},
			age = #{age},
			gender = #{gender},
			email = #{email}
		where id = #{id}
	</update>

	<select id="getSearchList" parameterType="map" resultType="member">
		select * 
		from
			( select rownum rnum, b.*
				from
					(select * 
					 from member2
					 where id != 'admin'
					  <include refid="search2_"/>
						order by id
						)b
				)
			where rnum &gt;= #{start} and rnum &lt;= #{end}
	</select>

	<select id="searchCount" parameterType="map" resultType="int">
		select count(*)
		from member2
		where id != 'admin'
		<include refid="search2_"/>
	</select>
	
	<sql id="search2_">
		<if test="search_field!=null">
			and
			<foreach collection="search_field" separator="or" item="index">
				<choose>
					<when test='index=="I"'>id</when>
					<when test='index=="N"'>name</when>
					<when test='index=="A"'>age</when>
					<when test='index=="G"'>gender</when>
				</choose>
				like #{search_word}
			</foreach>
		</if>
	</sql>
	
	<sql id="search_">
		<if test = "search_field!=null">
			and
			<foreach collection="search_field" separator="or" item="index">
				<choose>
					<when test="index=='I'.toString()">id</when>
					<when test="index=='N'.toString()">name</when>
					<when test="index=='A'.toString()">age</when>
					<when test="index=='G'.toString()">gender</when>
				</choose>
				like #{search_word}
			</foreach>
		</if>
	</sql>

	<select id="info" parameterType="int" resultType="member" >
		select * from member2 where id = #{id}
	</select>


</mapper>